<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--shapeButton-->
    <declare-styleable name="ShapeButton">
        <!--shape模式-->
        <attr name="shapeMode" />
        <!--填充颜色-->
        <attr name="shapeFillColor" />
        <!--按压颜色-->
        <attr name="shapePressedColor" />
        <!--描边颜色-->
        <attr name="shapeStrokeColor" />
        <!--描边宽度-->
        <attr name="shapeStrokeWidth" />
        <!--圆角大小-->
        <attr name="shapeCornerRadius" />
        <!--圆角位置-->
        <attr name="shapeCornerPosition" />
        <!--是否开启动效-->
        <attr name="shapeButtonActiveEnable" />
        <!--drawable位置-->
        <attr name="shapeButtonDrawablePosition" />
        <!--渐变开始颜色-->
        <attr name="shapeStartColor" />
        <!--渐变结束颜色-->
        <attr name="shapeEndColor" />
        <!--渐变方向-->
        <attr name="shapeOrientation" />

    </declare-styleable>

    <!--ShapeConstraintLayout-->
    <declare-styleable name="ShapeConstraintLayout">
        <attr name="shapeMode" />
        <attr name="shapeFillColor" />
        <attr name="shapeStrokeColor" />
        <attr name="shapeStrokeWidth" />
        <attr name="shapeCornerRadius" />
        <attr name="shapeCornerPosition" />
        <attr name="shapeStartColor" />
        <attr name="shapeEndColor" />
        <attr name="shapeOrientation" />
        <attr name="shapeElevation" />
    </declare-styleable>

    <!-- ShapeFrameLayout -->
    <declare-styleable name="ShapeFrameLayout">
        <attr name="shapeMode" />
        <attr name="shapeFillColor" />
        <attr name="shapeStrokeColor" />
        <attr name="shapeStrokeWidth" />
        <attr name="shapeCornerRadius" />
        <attr name="shapeCornerPosition" />
        <attr name="shapeStartColor" />
        <attr name="shapeEndColor" />
        <attr name="shapeOrientation" />
        <attr name="shapeElevation" />
    </declare-styleable>

    <!-- ShapeLinearLayout -->
    <declare-styleable name="ShapeLinearLayout">
        <attr name="shapeMode" />
        <attr name="shapeFillColor" />
        <attr name="shapeStrokeColor" />
        <attr name="shapeStrokeWidth" />
        <attr name="shapeCornerRadius" />
        <attr name="shapeCornerPosition" />
        <attr name="shapeStartColor" />
        <attr name="shapeEndColor" />
        <attr name="shapeOrientation" />
        <attr name="shapeElevation" />
    </declare-styleable>


    <!-- 此处为一串shape属性的定义 -->
    <!--shape模式-->
    <attr name="shapeMode" format="enum">
        <enum name="rectangle" value="0" />
        <enum name="oval" value="1" />
        <enum name="line" value="2" />
        <enum name="ring" value="3" />
    </attr>

    <!--填充颜色-->
    <attr name="shapeFillColor" format="color" />

    <!--描边颜色-->
    <attr name="shapeStrokeColor" format="color" />

    <!--描边宽度-->
    <attr name="shapeStrokeWidth" format="dimension" />

    <!--圆角大小-->
    <attr name="shapeCornerRadius" format="dimension" />

    <!--圆角位置-->
    <attr name="shapeCornerPosition">
        <flag name="topLeft" value="1" />
        <flag name="topRight" value="2" />
        <flag name="bottomRight" value="4" />
        <flag name="bottomLeft" value="8" />
    </attr>

    <!--drawable位置-->
    <attr name="shapeButtonDrawablePosition" format="enum">
        <enum name="left" value="0" />
        <enum name="top" value="1" />
        <enum name="right" value="2" />
        <enum name="bottom" value="3" />
    </attr>

    <!--渐变开始颜色-->
    <attr name="shapeStartColor" format="color" />

    <!--渐变结束颜色-->
    <attr name="shapeEndColor" format="color" />

    <!--渐变方向-->
    <attr name="shapeOrientation" format="enum">
        <enum name="TOP_BOTTOM" value="0" />
        <enum name="LEFT_RIGHT" value="1" />
    </attr>

    <!--按压颜色-->
    <attr name="shapePressedColor" format="color" />

    <!-- 阴影大小 -->
    <attr name="shapeElevation" format="dimension" />

    <!-- 按下特效是否开启 -->
    <attr name="shapeButtonActiveEnable" format="boolean" />

</resources>